doctype html
html
	head
		include ../includes/head
	body.admin-page
		.login-container.login-page
			.row
				.col-md-5
					.errors-container
					form#form-login.login-form.fade-in-effet.in(role="form", method="post", novalidate="novalidate")
						.login-header
							a.logo(href="#")
								img(width="80px", alt="web_jsie", src="")
								span 管理员登陆
							p 欢迎您!
						.form-group
							lable.control-label(for="username")
							input.form-control#username(type='text', name='username', autocomplete="off", placeholder="用户名")
						.form-group
							lable.control-label(for="password")
							input.form-control#password(type='password', name='password', autocomplete="off", placeholder="密码")
						.form-group
							button.btn.btn-block.btn-primary.text-left(type="submit")
								i.glyphicon.glyphicon-lock 
								| &nbsp;登陆
						.login-footer
							a(herf="#") 忘记密码?
					script(src='/js/validate.js', type="text/javascript")
		include ../includes/footer.jade
		script(src="/static/libs/bootstrap.min.js", type="text/javascript")
		script(src="/static/libs/jquery.validate.min.js")
	