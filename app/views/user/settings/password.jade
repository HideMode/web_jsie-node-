extends ../settings.jade

block settings
	.panel.panel-default
		.panel-heading
			h3.panel-title 密码设置
		.panel-body
			.settings-tip 修改你的登陆密码
			.settings-section
				form.password-form.form-horizontal(method="POST")
					.errors-container
					.form-group
						label.col-md-3.control-label 当前密码
						.col-md-9
							input.form-control(type="password", placeholder="当前密码", name="oldPwd", required)
							span.help-block 当前登录密码
					.form-group
						label.col-md-3.control-label 新的密码
						.col-md-9
							input.form-control(type="password", placeholder="新的密码", name="newPwd", required)
							span.help-block 密码不能少于6位
					.form-group
						label.col-md-3.control-label 确认密码
						.col-md-9
							input.form-control(type="password", placeholder="确认密码", name="cfmPwd", required)
					button#pwd_submit.btn.btn-primary(type="submit") 保存